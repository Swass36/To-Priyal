  <script>
    // CHANGE THIS to your chosen password!
    const correctPassword = "moonpie";
    const hints = [
      "It‚Äôs something only *you* used to call me when you were sleepy‚Ä¶",
      "It's not 'Guddu', but just as sweet.",
      "Think of what you whispered on birthdays.",
      "It‚Äôs short and starts with an 'm'.",
      "Last try: It made us both giggle every time."
    ];
    const finalHint = "Check our old WhatsApp chat on 13th March üòú";
    let tries = 0;

    document.getElementById('secretCheck').onclick = function() {
      const val = document.getElementById('secretInput').value.trim();
      const hintDiv = document.getElementById('hint');
      if (val.toLowerCase() === correctPassword.toLowerCase()) {
        document.getElementById('secretMain').style.display = 'none';
        document.getElementById('capsulePage').style.display = '';
      } else {
        if (tries < hints.length) {
          hintDiv.innerText = hints[tries];
        } else {
          hintDiv.innerText = finalHint;
        }
        tries++;
      }
    };
  </script>
